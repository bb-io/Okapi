<?xml version="1.0" encoding="UTF-8"?>
<srx xmlns="http://www.lisa.org/srx20" version="2.0">
    <header>
        <segmentsubflows>false</segmentsubflows>
        <cascade>no</cascade>
    </header>
    <body>
        <languagerules>
            <languagerule languagerulename="Default">
                <rule>
                    <beforebreak>\.</beforebreak>
